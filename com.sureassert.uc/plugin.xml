	</extension>

	<extension point="com.sureassert.uc.runtime.coverage">
		<client class="com.sureassert.uc.builder.SAUCEditorCoverageListenner">
		</client>
	</extension>

	<extension point="com.sureassert.uc.runtime.ucReexecutor">
		<client class="com.sureassert.uc.builder.UCReexecutor">
		</client>
	</extension>

	<extension id="saucRefreshProvider" point="org.eclipse.core.resources.refreshProviders">
		<refreshProvider class="com.sureassert.uc.builder.SaUCRefreshProvider">
		</refreshProvider>
	</extension>

	<!-- Action sets -->
	<extension point="org.eclipse.ui.actionSets">
		<actionSet label="Sureassert UC" visible="true"
			id="com.sureassert.uc.actionSet">
			<action class="com.sureassert.uc.ToggleCoverageDisplayAction" id="com.sureassert.uc.toggleCoverageDisplayAction"
				label="Toggle Show Test Coverage"
				toolbarPath="org.eclipse.ui.edit.text.actionSet.presentation/sureassert" icon="icons/toggle-coverage.png" tooltip="Toggle Show Test Coverage"
				style="toggle">
			</action>
		</actionSet>
	</extension>

	<!-- File decorators -->
	<extension point="org.eclipse.ui.decorators">
		<decorator id="com.sureassert.uc.coverageDecorator" label="Sureassert Code Coverage Decorator"
			state="true" class="com.sureassert.uc.CoverageDecorator"
			objectClass="org.eclipse.core.resources.IResource" adaptable="true"
			lightweight="true">
			<enablement>
				<objectClass name="org.eclipse.core.resources.IResource" />
			</enablement>
		</decorator>
	</extension>
	
</plugin>
