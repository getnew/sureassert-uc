			textPreferenceKey="sureassert.coverageRequiredSpec.Indication"
			textPreferenceValue="true" overviewRulerPreferenceKey="sureassert.coverageRequiredSpec.InOverviewRuler"
			overviewRulerPreferenceValue="false"
